      <%= f.label :場所 %>
    </div>
    <div class="field_input">
      <%= f.text_field :place %>
    </div>
    <div class="field">
      <label class="prefecture_select">都道府県</label>
    </div>
    <div class="field_input">
      <select name="event[prefecture]">
