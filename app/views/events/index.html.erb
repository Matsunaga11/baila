<%= javascript_include_tag "search.js" %>
<%= javascript_include_tag "event_index.js" %>
  <%= render 'shared/header' %>
  <script>
  $(function() {
    $("#datepicker").datepicker();
    $("#datepicker").datepicker("option", "showOn", 'button');
    $("#datepicker").datepicker("option", "buttonImageOnly", true);
    $("#datepicker").datepicker("option", "buttonImage", '/images/calendar.png');
  });
</script>
  <div id = "event_search_result"></div>
<a href = "<%= path_to_prev_page(@events) %>" class = "prev" >
  Prev
  </a>
<a href = "<%= path_to_next_page(@events) %>" class = "next">
  Next
</a>

<div class = "wrapper">
  <div class = "button_wrapper">
    <div class = "search_date" >日付<input type="hidden" id="datepicker" ></div>
    <div class = "search_place">場所</div>
    <div class = "search_instructor">インストラクター</div>
  </div>
  <div class = "each_wrapper">
    <% @events.each do |event| %>
      <div id = "event_card" class="card position_card" style="width: 20rem;">
        <% if event.status == true %>
          <%= image_tag  event.image , :class=> "rcard-img-top",:size => '300x250' %>
        <% else %>
          <%= image_tag "/images/#{event.image.to_s.split('/')[5]}", :class=> "rcard-img-top",:size => '300x250'%>
        <% end %>
        <div class="card-body">
          <p class="card-text"><%= event.eventday.month %>月<%= event.eventday.day %>日</p>
          <span class="card-title" data-title = "#{event.name}"><%= event.name %></span>
          <a href="#" class="btn btn-primary">イベント詳細</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
